<h1><font color="red">Welcome to CareVest</font></h1>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.text_field :firstname, autofocus: true, placeholder: "First Name" %>
  </div>
  <div class="field">
    <%= f.text_field :lastname, autofocus: true, placeholder: "Last Name" %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
  </div>
  <div class="field">
    <%= f.label "Phone Number" %> <br>
    <%= f.telephone_field :phone_number, autofocus: true, placeholder: "Ex: +14151234567" %>
  </div>
  <div class="field">
    <%= f.label "Guardian Phone Number" %> <br>
    <%= f.telephone_field :guardian_phone_number, autofocus: true, placeholder: "Ex: +14151234567" %>
  </div>
  <div class="field">
    <%= f.number_field :zipcode, autofocus: true, placeholder: "Zipcode" %>
  </div>

  <div class="field">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
  </div>

  <div class="actions" >
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<h3>Have an Account? <%= render "devise/shared/links" %></h3>
